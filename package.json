{
  "name": "agentify-mcp",
  "version": "0.0.3",
  "description": "Agentify MCP Server - Multi-client AI agent monitoring and control system with auto task completion detection",
  "type": "module",
  "bin": {
    "agentify-mcp": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "example-config.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "agent",
    "monitoring",
    "claude",
    "gemini",
    "automation",
    "task-completion",
    "file-monitoring",
    "notifications"
  ],
  "author": {
    "name": "Agentify Team",
    "email": "team@agentify.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agentify/agentify-mcp.git"
  },
  "homepage": "https://github.com/agentify/agentify-mcp#readme",
  "bugs": {
    "url": "https://github.com/agentify/agentify-mcp/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "chokidar": "^4.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
